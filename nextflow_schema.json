{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "AMR Detection Workflow",
  "description": "Detect antimicrobial resistance genes",
  "type": "object",
  "definitions": {},
  "properties": {
    "samplesheet": {
      "type": "string",
      "format": "file",
      "description": "TSV file with columns: id, species, assembly",
      "default": ""
    },
    "outdir": {
      "type": "string",
      "description": "Output directory",
      "default": "results"
    },
    "threads": {
      "type": "integer",
      "description": "Number of CPU threads",
      "default": 4,
      "minimum": 1,
      "maximum": 16
    }
  },
  "required": ["samplesheet"]
}
