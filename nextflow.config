manifest {
    name            = 'zwets/amr-trinity/tree/master'
    author          = 'Seqafrica'
    homePage        = 'https://github.com/zwets/amr-trinity/tree/master'
    description     = 'AMR_trinity'
    mainScript      = 'main.nf'
    nextflowVersion = '>=20.10.0'
    version         = 'v1.0.11'
}


params {
    input = 'test/mini/isolates.tsv'
    outdir = 'results'
}

plugins {
    // For samplesheetToList (unused)
